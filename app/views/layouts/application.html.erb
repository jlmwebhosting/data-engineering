<!DOCTYPE html>
<html>
<head>
  <title>LivingSocial "New Company We Just Purchased" Data File Importer, v1</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</a>
			<a class="brand" href="#">Importer</a>
			<div class="nav-collapse collapse">
				<ul class="nav">
					<li<%= get_nav_class root_path%>><%= link_to "Home", root_path%></li>
					<% if signed_in? %>
					<li<%= get_nav_class orders_path%>><%= link_to "Orders", orders_path%></li>
					<li<%= get_nav_class customers_path%>><%= link_to "Customers", customers_path%></li>
					<li<%= get_nav_class products_path %>><%= link_to "Products", products_path%></li>
					<li<%= get_nav_class merchants_path%>><%= link_to "Merchants", merchants_path %></li>
					<% end %>
				</ul>
				<form class="navbar-form pull-right">
					<% if signed_in? %>
						<%= link_to "Uploader", importer_path, class: "btn btn-warning" %>
						<%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn" %>
					<% else %>
						<%= link_to "Sign In", new_user_session_path, class: "btn btn-warning " %>
						<%= link_to "Register", new_user_registration_path, class: "btn" %>
					<% end %>
				</form>
			</div><!--/.nav-collapse -->
		</div>
	</div>
</div>

<div class="container">
	<% if flash.key? :alert %>
	<p class="alert alert-error"><%=flash[:alert]%></p>
	<% end %>
	<% if flash.key? :notice %>
		<p class="alert alert-info"><%=flash[:notice]%></p>
	<% end %>
	<%= yield %>
	<hr>

	<footer>
		<p>&copy; LivingSocial 2012 (not really)</p>
	</footer>

</div> <!-- /container -->

</body>
</html>